<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar_thl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notificationTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lê Hải Thọ đã bình luận bài viết của bạn"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/avatarImage"
        app:layout_constraintTop_toTopOf="@+id/avatarImage"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 phút trước"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:textColor="@color/outline_icon"
        app:layout_constraintBottom_toBottomOf="@+id/avatarImage"
        app:layout_constraintStart_toEndOf="@+id/avatarImage"
        app:layout_constraintTop_toBottomOf="@+id/notificationTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>